    "@discordjs/voice": "^0.18.0",
    "axios": "^1.11.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "prism-media": "^1.3.5",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/wav": "^1.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
